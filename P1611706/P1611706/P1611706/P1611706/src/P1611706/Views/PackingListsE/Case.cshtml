
@section headercss
{
	<link href="~/css/datatables.bootstrap.css" rel="stylesheet" />
	<link href="~/css/datatables.min.css" rel="stylesheet" />
	<link href="~/css/bootstrap-dialog.min.css" rel="stylesheet" />

}

<!-- Content Header (Page header) -->
<section class="content-header">
	<h1>
		<a href="@(@Url.Action("Index","PackingListsE"))">產品報表</a> > 棧板 > 棧板細項
	</h1>
</section>
<section class="content">
	<div class="row">
		<div class="col-md-12">
			<div class="box box-primary">
				<div class="box-header">
				</div><!-- /.box-header -->
				<div class="box-body">
					<div class="row">
						<div class="col-md-3">
							<div class="input-group">
								<span class="input-group-addon">棧號</span>
								<div class="form-group has-feedback has-clear">
									<input type="text" class="form-control" id="PalletsNo" name="PalletsNo" disabled>
								</div>
							</div>
						</div>
						<div class="col-md-3">
							<div class="input-group">
								<span class="input-group-addon">日期</span>
								<div class="form-group has-feedback has-clear">
									<input type="text" class="form-control" id="PackingTime" name="PackingTime" disabled>
								</div>
							</div>
						</div>
					</div>
					<br />
					<table id="packingCase-table" class="table table-bordered text-center" cellspacing="0">
						<thead>
							<tr>
								<th style="width:30%">項次</th>
								<th style="width:30%">箱號</th>
								<th style="width:30%">數量(袋)</th>
								<th style="width:10%"></th>
							</tr>
						</thead>
						<tbody></tbody>
					</table>
				</div>
			</div>
		</div>
	</div>


	@section pagejs
{
		<script src="~/js/datatables.all.min.js"></script>
		<script src="~/js/datatables.bootstrap.js"></script>
		<script src="~/js/datatables.min.js"></script>
	<script src="~/js/packing.pallets.datatables.js"></script>
		<script src="~/js/bootstap-dialog.min.js"></script>
	}
</section>