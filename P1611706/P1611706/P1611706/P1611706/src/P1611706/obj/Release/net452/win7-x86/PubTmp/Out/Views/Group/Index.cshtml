

@section headercss
{
    <link href="~/css/datatables.bootstrap.css" rel="stylesheet" />
    <link href="~/css/datatables.min.css" rel="stylesheet" />
    <link href="~/css/text_clear_button.css" rel="stylesheet" />
    <link href="~/css/bootstrap-dialog.min.css" rel="stylesheet" />
<style type="text/css">
	.btn span.glyphicon {
		opacity: 0;
	}

	.btn.active span.glyphicon {
		opacity: 1;
	}
</style>



}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
		<a href="@(@Url.Action("Index","Group"))">群組建立</a>
    </h1>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header">
                </div><!-- /.box-header -->
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-3 ">
                            <div class="input-group">
                                <span class="input-group-addon">群組代碼</span>
                                <div class="form-group has-feedback has-clear">
                                    <input type="text" class="form-control" id="GroupID" name="GroupID">
                                    <span class="form-control-clear glyphicon glyphicon-remove form-control-feedback hidden"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="input-group">
                                <span class="input-group-addon">群組名稱</span>
                                <div class="form-group has-feedback has-clear">
                                    <input type="text" class="form-control" id="GroupName" name="GroupName">
                                    <span class="form-control-clear glyphicon glyphicon-remove form-control-feedback hidden"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <button id="btnSearch" class="edit btn btn-success" onclick="searchGroup()"><i class="fa fa-fw fa-search"></i>搜尋</button>
                        </div>
                        <div class="col-md-3 text-right">
                            <button id="btnAdd" class="edit btn btn-info" onclick="addGroup()"><i class="fa fa-fw fa-plus"></i>新增群組</button>
                        </div>
                    </div>
                    <br />
                    <table id="group-table" class="table table-bordered text-center" cellspacing="0">
                        <thead>
                            <tr>
                                <th style="width:40%">群組代碼</th>
                                <th style="width:40%">群組名稱</th>
                                <th style="width:20%"></th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>


@section pagejs
{
    <script src="~/js/datatables.all.min.js"></script>
    <script src="~/js/datatables.bootstrap.js"></script>
    <script src="~/js/datatables.min.js"></script>
    <script src="~/js/bootstap-dialog.min.js"></script>
    <script src="~/js/group.datatables.js"></script>
    <script src="~/js/text.clear.button.js"></script>
}