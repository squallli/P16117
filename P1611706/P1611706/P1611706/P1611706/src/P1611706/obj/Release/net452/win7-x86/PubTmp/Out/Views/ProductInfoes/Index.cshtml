
@section headercss
{
    <link href="~/css/datatables.bootstrap.css" rel="stylesheet" />
    <link href="~/css/datatables.min.css" rel="stylesheet" />
    <link href="~/css/text_clear_button.css" rel="stylesheet" />
    <link href="~/css/bootstrap-dialog.min.css" rel="stylesheet" />

}

<section class="content-header">
    <h1>
		<a href="@(@Url.Action("Index","ProductInfoes"))">產品資料維護</a>
    </h1>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header">
                </div><!-- /.box-header -->

                <div class="box-body">
                    <div class="row">
                        @*<form id="searchForm" value="searchForm">*@
                        <div class="col-md-3">
                            <div class="input-group">
                                <span class="input-group-addon">產品編號</span>
                                <div class="form-group has-feedback has-clear">
                                    <input type="text" class="form-control" id="ProductNo" name="ProductNo">
                                    <span class="form-control-clear glyphicon glyphicon-remove form-control-feedback hidden"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="input-group">
                                <span class="input-group-addon">產品名稱</span>
                                <div class="form-group has-feedback has-clear">
                                    <input type="text" class="form-control" id="ProductName" name="ProductName">
                                    <span class="form-control-clear glyphicon glyphicon-remove form-control-feedback hidden"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            @*type="submit" value="Submit"*@
                            <button id="btnSearch" class="edit btn btn-success" onclick="searchProduct()"><i class="fa fa-fw fa-search"></i>搜尋</button>
                        </div>
                        @*</form>*@
                    </div>
                    <br />
                    <table id="product-table" class="table table-bordered text-center" cellspacing="0">
                        <thead>
                            <tr>
                                <th style="width:12%">產品編號</th>
                                <th style="width:12%">產品名稱</th>
                                <th style="width:10%">規格</th>
                                <th style="width:10%">單位</th>
                                <th style="width:10%">容量</th>
								<th style="width:10%">效期(月)</th>
								<th style="width:10%">效期(日)</th>
								<th style="width:11%">條碼</th>
                                <th style="width:15%"></th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>


@section pagejs
{
    <script src="~/js/datatables.all.min.js"></script>
    <script src="~/js/datatables.bootstrap.js"></script>
    <script src="~/js/datatables.min.js"></script>
    <script src="~/js/product.datatables.js"></script>
    <script src="~/js/text.clear.button.js"></script>
    <script src="~/js/bootstap-dialog.min.js"></script>
    <script>
        $("#ProductNo").keyup(function (event) {
            if (event.keyCode == 13) {
                $("#btnSearch").click();
            }
        });

        $("#ProductName").keyup(function (event) {
            if (event.keyCode == 13) {
                $("#btnSearch").click();
            }
        });
    </script>

}